#!/bin/sh
set +C

# man(1)
TMP_FILE=$(mktemp)
MAN_DUMP=$XDG_CACHE_HOME/man

[ ! -f "$MAN_DUMP" ] && echo -n > $MAN_DUMP

tail -n 1000 $HISTFILE \
	| grep "^man [a-zA-Z12-]\{4,\}" \
	| cut -d ' ' -f 2 > $TMP_FILE

cat $MAN_DUMP >> $TMP_FILE
sort -u $TMP_FILE > $MAN_DUMP

